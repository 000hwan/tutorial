source 'https://rubygems.org'

gem 'nokogiri', '~> 1.6.1'
gem 'escape_utils', '~> 1.0.1'

# 3.0.0 is a known good version.
# Don't upgrade gollum-lib unless the changes
# have been verified not to break anything.
gem 'gollum-lib', '= 3.0.0'

# Must have pygments or gollum reverts to rouge
gem 'pygments.rb', '~> 0.5.4'

# Use the github gem for rendering
gem 'redcarpet', '~> 3.1.1'
gem 'github-markdown', '~> 0.6.5'

# for rake spec
gem 'rake', '~> 10.2.2'
gem 'rspec', '~> 2.14.1'